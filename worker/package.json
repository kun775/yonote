{
  "name": "yonote-worker",
  "version": "1.0.0",
  "description": "YoNote - Markdown note application on Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --env=\"\"",
    "db:init": "wrangler d1 execute yonote-db --remote --file=./src/db/schema.sql",
    "db:init:local": "wrangler d1 execute yonote-db --local --file=./src/db/schema.sql"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.0",
    "wrangler": "^4.59.2"
  }
}
